<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|bottom">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/renting_ic"
        android:id="@+id/cat1"
        android:layout_margin="3dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:id="@+id/cat2"
        android:background="@drawable/hotels_ic"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/cat3"
        android:background="@drawable/leisure_ic"
        android:layout_margin="3dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/cat4"
        android:background="@drawable/drinksfood_ic"
        android:layout_margin="3dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/cat5"
        android:background="@drawable/night_ic"
        android:layout_margin="3dp"/>
</LinearLayout>